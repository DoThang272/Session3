CREATE TABLE lt9.Students (
    student_id SERIAL PRIMARY KEY,
    name VARCHAR(100) NOT NULL,
    dob DATE
);

CREATE TABLE lt9.Courses (
    course_id SERIAL PRIMARY KEY,
    course_name VARCHAR(100) NOT NULL,
    credits INT CHECK (credits > 0)
);

CREATE TABLE lt9.Enrollments (
    enrollment_id SERIAL PRIMARY KEY,
    student_id INT REFERENCES lt9.Students(student_id) ON DELETE CASCADE,
    course_id INT REFERENCES lt9.Courses(course_id) ON DELETE CASCADE,
    grade CHAR(1) CHECK (grade IN ('A', 'B', 'C', 'D', 'F'))
);
